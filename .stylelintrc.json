{
    "extends": ["stylelint-config-standard"],
    "rules": {
      "property-disallowed-list": ["-webkit-text-size-adjust", "-moz-column-gap"],
      "filter-disallowed-list": ["alpha()"],
      "function-disallowed-list": ["alpha()"],
      "value-no-invalid-value": true,
      "value-list-comma-newline-after": "always",
      "max-nesting-depth": 4,
      "selector-max-id": 2
    }
  }
  